@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="bg-light p-4 rounded-3 mb-5">
    <h1 class="h3 fw-bold mb-3">Welcome back, @Context.Session.GetString("Username")!</h1>
    <p class="text-muted mb-4">Browse products and manage your orders</p>

    <div class="row g-3">
        <div class="col-md-4">
            <a class="btn btn-primary w-100 py-2" asp-controller="Product" asp-action="Index">
                <i class="bi bi-bag-check me-2"></i>Browse Products
            </a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-success w-100 py-2" asp-controller="Cart" asp-action="Index">
                <i class="bi bi-cart3 me-2"></i>View Cart
            </a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-info w-100 py-2" asp-controller="Order" asp-action="MyOrders">
                <i class="bi bi-list-check me-2"></i>My Orders
            </a>
        </div>
    </div>
</div>

<h2 class="h4 mb-4">Featured Products</h2>

@if (Model.FeaturedProducts.Any())
{
    <div class="row g-4">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top product-image" alt="@product.ProductName">
                    }
                    else
                    {
                        <div class="card-img-top product-image bg-light d-flex align-items-center justify-content-center">
                            <i class="bi bi-image text-muted fs-1"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text text-muted small">@(product.Description?.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-primary mb-0">@product.Price.ToString("C")</span>
                            <small class="text-muted">Stock: @product.StockAvailable</small>
                        </div>
                    </div>
                    <div class="card-footer border-0 bg-white pt-0">
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@product.Id">
                            <input type="hidden" name="quantity" value="1">
                            <button type="submit" class="btn btn-primary w-100" disabled="@(product.StockAvailable == 0)">
                                <i class="bi bi-cart-plus me-2"></i>Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center py-4">
        <i class="bi bi-info-circle me-2"></i>No featured products available.
    </div>
}