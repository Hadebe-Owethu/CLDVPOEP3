<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retailers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <style>
        :root {
            --primary-color: #198754; /* Bootstrap green */
            --secondary-color: #f8f9fa;
        }

        body {
            font-family: "Segoe UI", sans-serif;
        }

        .navbar {
            background-color: var(--primary-color);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--secondary-color);
        }

        .nav-link {
            font-weight: 500;
            color: var(--secondary-color);
        }

            .nav-link:hover {
                color: #d1e7dd;
            }

        .hero {
            background: linear-gradient(135deg, #198754, #20c997);
            color: white;
            padding: 3rem 1rem;
            text-align: center;
            border-radius: 0 0 12px 12px;
        }

        .card {
            border: 1px solid #e9ecef;
            border-radius: 8px;
            transition: transform 0.2s ease;
        }

            .card:hover {
                transform: scale(1.02);
            }

        .footer {
            background: #212529;
            color: #adb5bd;
            padding: 2rem 0;
        }

            .footer a {
                color: #adb5bd;
                text-decoration: none;
            }

                .footer a:hover {
                    color: white;
                }

        .product-image {
            height: 160px;
            object-fit: cover;
            border-radius: 6px;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bag-check-fill me-2"></i>ABC Retailers
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">
                                <i class="bi bi-box-seam me-1"></i>Products
                            </a>
                        </li>

                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-shield-lock me-1"></i>Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="AdminDashboard">Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Index">Customers</a></li>
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Create">Add Product</a></li>
                                    <li><a class="dropdown-item" asp-controller="Order" asp-action="Manage">Manage Orders</a></li>
                                </ul>
                            </li>
                        }

                        @if (Context.Session.GetString("UserId") != null && Context.Session.GetString("Role") == "Customer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="MyOrders">
                                    <i class="bi bi-receipt-cutoff me-1"></i>My Orders
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                    <i class="bi bi-cart-fill"></i> Cart
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>@Context.Session.GetString("Username")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Login" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-light btn-sm ms-2" asp-controller="Login" asp-action="Register">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <section class="hero">
            <h1>Welcome to ABC Retailers</h1>
            <p class="lead">Your one-stop shop for quality products at great prices.</p>
        </section>
    </header>

    <main class="flex-grow-1">
        <div class="container py-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto">
        <div class="container text-center">
            <p class="mb-1">&copy; 2024 ABC Retailers</p>
            <small>
                <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a>
            </small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
